<%= form_for @user do | f | %>

    <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>There were some errors:</h2>
      <ul>
        <% @user.errors.full_messages.each do | msg | %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field <%= 'field_with_errors' if @user.errors[:email].any? %>">
     <label> Email </label>

    <%= f.text_field :email, value: current_email %><br>
    </div>
    <div class="field <%= 'field_with_errors' if @user.errors[:password].any? %>">
  <label> Password </label>

    <%= f.password_field :password %><br>
    </div>
    <div class="field <%= 'field_with_errors' if @user.errors[:password_confirmation].any? %>">
   <label> Confirm Password </label>

    <%= f.password_field :password_confirmation %><br>
    </div>

    <%= f.submit "Sign Up", class: "big-brown-button", id: "sign-up-button"  %>
    <% end %>